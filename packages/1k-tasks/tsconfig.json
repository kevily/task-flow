{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "outDir": "lib",
        "baseUrl": "."
    },
    "include": ["src/**/*", "test/test.ts"],
    "exclude": ["node_modules/**/*"]
}
