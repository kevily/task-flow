{
    "name": "1k-tasks",
    "version": "3.6.1",
    "main": "./cjs/index.js",
    "module": "./es/index.js",
    "types": "./es/index.d.ts",
    "repository": "https://github.com/kevily/task-flow",
    "author": "1k <bug_zero@163.com>",
    "license": "MIT",
    "bin": {
        "task": "./bin/index.js"
    },
    "scripts": {
        "start-bin": "tsc -p ./tsconfig.bin.json -w",
        "build-bin": "rimraf ./bin && tsc -p ./tsconfig.bin.json",
        "start-cjs": "tsc -p ./tsconfig.cjs.json -w",
        "build-cjs": "rimraf ./cjs && tsc -p ./tsconfig.cjs.json",
        "start-esm": "tsc -p ./tsconfig.esm.json -w",
        "build-esm": "rimraf ./es && tsc -p ./tsconfig.esm.json",
        "build": "pnpm run lint && pnpm run build-cjs &&  pnpm run build-esm && pnpm run build-bin",
        "lint": "eslint \"./src/**/*.{ts,js}\""
    },
    "files": [
        "cjs",
        "es",
        "bin",
        "package.json"
    ],
    "dependencies": {
        "@babel/core": "7.24.9",
        "@babel/plugin-transform-runtime": "7.24.7",
        "@babel/preset-env": "7.24.8",
        "@babel/preset-react": "7.24.7",
        "@babel/preset-typescript": "7.24.7",
        "@rollup/plugin-babel": "6.0.4",
        "@rollup/plugin-commonjs": "26.0.1",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@rollup/plugin-url": "8.0.2",
        "@svgr/rollup": "8.1.0",
        "chalk": "4.1.1",
        "commander": "8.1.0",
        "commitizen": "4.2.4",
        "cssnano": "5.0.6",
        "cz-adapter-eslint": "0.3.0",
        "eslint": "8.45.0",
        "fs-extra": "10.0.0",
        "glob": "11.0.0",
        "inquirer": "8.2.4",
        "lodash": "4.17.21",
        "ora": "5.4.1",
        "prettier": "3.3.3",
        "rimraf": "5.0.2",
        "rollup": "4.19.0",
        "rollup-plugin-delete": "2.0.0",
        "sass": "1.35.2",
        "typescript": "5.1.6"
    },
    "devDependencies": {
        "@types/babel-core": "6.25.7",
        "@types/fs-extra": "9.0.12",
        "@types/inquirer": "8.2.1",
        "@types/lodash": "4.14.171",
        "@types/merge2": "1.3.1",
        "@types/node": "20.3.3",
        "@types/sass": "1.16.1",
        "@typescript-eslint/eslint-plugin": "6.0.0",
        "@typescript-eslint/parser": "6.0.0",
        "eslint-plugin-prettier": "5.0.0",
        "ts-node": "10.9.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-adapter-eslint"
        }
    }
