{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}