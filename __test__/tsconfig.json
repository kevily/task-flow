{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "src/**/types.ts"]
}
